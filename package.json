{
  "name": "guruforu-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-standalone-assets",
    "copy-standalone-assets": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(file=>{const srcPath=path.join(src,file);const destPath=path.join(dest,file);if(fs.statSync(srcPath).isDirectory()){copyDir(srcPath,destPath)}else{fs.copyFileSync(srcPath,destPath)}})}if(fs.existsSync('.next/static'))copyDir('.next/static','.next/standalone/.next/static');if(fs.existsSync('public'))copyDir('public','.next/standalone/public');\"",
    "start": "node .next/standalone/server.js",
    "start:next": "next start",
    "lint": "next lint",
    "clean:all": "rimraf .next && rimraf build && rimraf .next/standalone"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@google-cloud/secret-manager": "^6.1.1",
    "next": "^16.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.1",
    "typescript": "^5.3.0"
  }
}
